<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title - My ASP.NET MVC Application</title>
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<meta name="viewport" content="width=device-width" />
	@Styles.Render("~/bootstrap/css")
</head>
<body>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse_menu"
					aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<div class="navbar-text navbar-left">RSA ID Generator/Validator Service</div>
			</div>
			<div class="collapse navbar-collapse" id="collapse_menu">
				<ul class="nav navbar-nav pull-right">
					<li><a href="http://geekswithblogs.net/willemf/archive/2005/10/30/58561.aspx" target="_blank">How to validate SA ID Numbers</a></li>
				</ul>
			</div>
		</div>
	</nav>
	<div id="body">
		<section>
			@RenderBody()
		</section>
	</div>
	<nav class="navbar navbar-inverse navbar-fixed-bottom collapse navbar-collapse">
		<div class="container-fluid">
			<div class="navbar-text navbar-left small">&copy; @DateTime.Now.Year - RSA ID Generator/Validing Service</div>
		</div>
	</nav>
	@Scripts.Render("~/bundles/jquery")
	@RenderSection("scripts", required: false)
</body>
</html>
